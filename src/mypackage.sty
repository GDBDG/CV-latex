% CV skill : show the skill name, the logo (if provided), and the skill bar
% #1 : name of the skill
% #2 : logo path, empty if no logo
% #3 : grade on the skill (between 0 and 1)
\newcommand{\cvskill}[3] {
    % The logo is hidden by the option noskillslogo
	\begin{tabular*}{1\mpwidth}{p{0.72\mpwidth}  r}
 		\textbf{#1} & \IfEq{#2}{}{}{\IfEq{\skillslogo}{false}{}{\includegraphics[width=0.5cm]{#2}}}\\
	\end{tabular*}%
	\hspace{4pt}
	\begin{tikzpicture}[scale=1,rounded corners=2pt,very thin]
		\fill [skillbarbackcolor] (0,0) rectangle (1\mpwidth, 0.15);
		\fill [skillbarcolor] (0,0) rectangle (#3 * \the\mpwidth, 0.15);
  	\end{tikzpicture}%
}

% set the content of the left bar
\newcommand{\sethighlightbar}[1]{%
    \def\@highlightbar{%
        \begin{minipage}[t]{\dimexpr \highlightwidth-\marginleft-\marginright}%
            #1%
        \end{minipage}%
    }
}

% set the content of the main bar
\newcommand{\setmainbar}[1]{%
    \def\@mainbar{%
        \begin{minipage}[t]{\mainwidth}%
            #1%
        \end{minipage}%
    }
}

