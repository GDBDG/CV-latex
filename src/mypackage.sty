% Description of a professionnal experience or formation
% #1 : title
% #2 : compagny or school
% #3 : period
% #4 : geographical location
% #5 : description
% #6 : logo of the compagny / school
\newcommand{\cvevent}[6]{
        \begin{tabular}{p{0.72\linewidth} p{0.28\linewidth}}
            \begin{minipage}{\linewidth}
                {\color{cveventtitlecolor}#1}
                % \\[0.3em]
                \ifstrequal{#2}{}{}{
                \textbf{\color{compagny}#2}
                \\[0.3em]}
                \ifstrequal{#3}{}{}{{\small\makebox[0.7\linewidth][l]{\faCalendar*[regular]~#3}}}%
                \ifstrequal{#4}{}{}{{\small\makebox[0.3\linewidth][l]{\faMapMarker*~#4}}}
            \end{minipage}
            &
            \IfEq{#6}{}{}{\raisebox{-0.7\height}{\resizebox{!}{13mm}{\includegraphics{#6}}}} \tabularnewline
            \multicolumn{2}{l|}{
                \begin{minipage}{\linewidth}
                    \small{#5}
                \end{minipage}
            } \tabularnewline
        \end{tabular}

        
        
}