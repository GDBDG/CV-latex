% Description of a professionnal experience or formation
% #1 : title
% #2 : compagny or school
% #3 : period
% #4 : geographical location
% #5 : description
% #6 : logo of the compagny / school
\newcommand{\cvevent}[6]{
        \begin{tabular}{p{0.73\linewidth} p{0.23\linewidth}}
            \begin{minipage}{\linewidth}
                {\large\color{black}#1}
                \\[0.3em]
                \ifstrequal{#2}{}{}{
                \textbf{\color{blue}#2}
                \\[0.3em]}
                \ifstrequal{#3}{}{}{{\small\makebox[0.5\linewidth][l]{\faCalendar*[regular]~#3}}}%
                \ifstrequal{#4}{}{}{{\small\makebox[0.5\linewidth][l]{\faMapMarker*~#4}}}
                \newline
                \small{#5}
            \end{minipage}
            &
            \IfEq{#6}{}{}{\raisebox{-0.7\height}{\includegraphics[width=\linewidth]{#6}}} \tabularnewline
        \end{tabular}
        
}